<%= include_gon %>
<% provide :head_tags do %>
  <meta name='turbolinks-visit-control' content='reload'>
  <script>
    document.addEventListener("DOMContentLoaded", function(){
      initMap(<%=@place.latitude%>, <%=@place.longitude%>)
    });
  </script>
<% end %>

<p id="notice"><%= notice %></p>

<p>
    <div id="map"></div>
</p>

<div align="center">
  <p class = "description">
    <strong>Name:</strong>
    <%= @place.name %>
  </p>

  <p class = "description">
    <strong>Latitude:</strong>
    <%= @place.latitude %>
  </p>

  <p class = "description">
    <strong>Longitude:</strong>
    <%= @place.longitude %>
  </p>

  <%= link_to '<button type="button">Add new business</button>'.html_safe, new_place_ally_place_path(@place) %>



  <%= link_to '<button type="button">Edit Location</button>'.html_safe, edit_place_path(@place) %>
  <%= link_to '<button type="button">List of Locations</button>'.html_safe, places_path %>

</div>
